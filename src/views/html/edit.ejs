<div class="l-content l-form">
    <div class="control-tables pure-g">
            <div class="control-table control-table-update w100">

                <form method="POST" action="" class="form pure-form pure-u-1 pure-u-md-5-6">
                <h2>Edit Papers</h2>

                <div class="w100 flex wrap pure-control-group">

                        <select id="pPapers" class="pure-input-1-2">

                        </select>
                    <input type="button" id="db-select" class="button-choose pure-button button-edit" value="Select"></i>

                </div>
                <br><br><br>


                <fieldset class="pure-group">
                    <input id="m-title" type="text" class="pure-input-1" name="paperTitle" placeholder="Title">
                    <br>
                    <textarea id="m-abstract" class="pure-input-1 desc" name="paperDescription" placeholder="Description"></textarea>
                    <br>
                    <textarea id="m-citation" class="pure-input-1 desc" name="paperCitations" placeholder="Citations"></textarea>
                    <br>
                    <a href="../controlpanel" class="button-choose pure-button">Back</a>
                    <input type="button" id="db-save" class="button-choose pure-button button-add" value="Save">
                </fieldset>


                <fieldset class="pure-group auth-div">
                   <h3 style="text-align:left;">Edit Authors</h3>
                    <div class="w100 flex wrap auth-cont pure-control-group">

                            <select id="pAuthor" class="pure-input-1-2">

                            </select>
                        <i class="add-auth fa fa-plus-circle pure-btn"></i>

                    </div>
                    <br>


                </fieldset>
                <fieldset class="pure-group key-div">
                    <div class="w100 flex" id="key-cont">
                        <input type="text" class="pure-input-1-2 pKey" name="paperKeywords" placeholder="Keyword"><br>
                        <i class="add-key fa fa-plus-circle pure-btn"></i>
                    </div>
                    <br>
                </fieldset>

                </form>
